<?xml version="1.0" encoding="utf-8"?>
<!--version="1.0" encoding="utf-8" standalone="yes"-->
<window>	
	<controls>
		<!-- Logos [ListView/AlbumView] -->
                <control>
                  <description>UnWatched BG Logo</description>
                  <type>image</type>
                  <id>0</id>
                  <posX>48</posX>
                  <posY>127</posY>
                  <width>22</width>
                  <height>22</height>                  
                  <texture>overlayunwatched.png</texture>		  
                  <visible>[facadeview.list|facadeview.album]</visible>
                  <animation effect="fade" time="70" reversible="false">visible</animation>	        
                </control> 
                <control>
                  <description>Watched Logo</description>
                  <type>image</type>
                  <id>0</id>
                  <posX>48</posX>
                  <posY>127</posY>
                  <width>22</width>
                  <height>22</height>                  
                  <texture>overlaywatched.png</texture>	  
                  <visible>[facadeview.list|facadeview.album]+[Control.HasFocus(50)+!string.equals(#Youtube.fm.Curent.Video.IsWatched, false )]</visible>
                  <animation effect="fade" time="70" reversible="false">visible</animation>	        
                </control>
                <control>
                  <description>HD Logo</description>
                  <type>image</type>
                  <id>0</id>
                  <posX>79</posX>
                  <posY>126</posY>
                  <width>50</width>
                  <height>25</height>
                  <keepaspectratio>yes</keepaspectratio>            
                  <texture>Logos\hd.png</texture>	  
                  <visible>[facadeview.list|facadeview.album]+[Control.HasFocus(50)+!string.equals(#Youtube.fm.Curent.Video.IsHD, false )]</visible>
                  <animation effect="fade" time="70" reversible="false">visible</animation>	        
                </control>		
		<!-- Logos [Smallicons/Largeicons/Coverflow/Filmstrip Views] -->
                <control>
                  <description>UnWatched BG Logo</description>
                  <type>image</type>
                  <id>0</id>
                  <posX>675</posX>
                  <posY>55</posY>
                  <width>23</width>
                  <height>23</height>      
                  <align>right</align>            
                  <texture>overlayunwatched.png</texture>	  
                  <visible>[facadeview.coverflow|facadeview.filmstrip|facadeview.smallicons|facadeview.largeicons]</visible>
                  <animation effect="fade" time="70" reversible="false">visible</animation>	        
                </control> 
                <control>
                  <description>Watched Logo</description>
                  <type>image</type>
                  <id>0</id>
                  <posX>675</posX>
                  <posY>55</posY>
                  <width>23</width>
                  <height>23</height>      
                  <align>right</align>            
                  <texture>overlaywatched.png</texture>	  
                  <visible>[facadeview.coverflow|facadeview.filmstrip|facadeview.smallicons|facadeview.largeicons]+[Control.HasFocus(50)+!string.equals(#Youtube.fm.Curent.Video.IsWatched, false )]</visible>
                  <animation effect="fade" time="70" reversible="false">visible</animation>	        
                </control>
                <control>
                  <description>HD Logo</description>
                  <type>image</type>
                  <id>0</id>
                  <posX>616</posX>
                  <posY>52</posY>
                  <width>50</width>
                  <height>30</height>
                  <keepaspectratio>yes</keepaspectratio>
                  <align>right</align>            
                  <texture>Logos\hd.png</texture>	  
                  <visible>[facadeview.coverflow|facadeview.filmstrip|facadeview.smallicons|facadeview.largeicons]+[Control.HasFocus(50)+!string.equals(#Youtube.fm.Curent.Video.IsHD, false )]</visible>
                  <animation effect="fade" time="70" reversible="false">visible</animation>	        
                </control>
                <!-- Downloading Section View Only if Downloading Now is In Process [List/Album/Smallicons/Largeicons/Coverflow/Filmstrip Views] -->
                <control>
                  <description>Downloading Notfication Logo</description>
                  <type>image</type>
                  <id>0</id>
                  <posX>260</posX>
                  <posY>538</posY>
                  <width>23</width>
                  <height>23</height>
                  <keepaspectratio>yes</keepaspectratio>            
                  <texture>isupdate.png</texture>	  
                  <visible>string.equals(#Youtube.fm.IsDownloading, true )</visible>
                  <animation effect="fade" time="70" reversible="false">visible</animation>	        
                </control>
                <control>
                  <description>Downloading Progress Bar</description>
                  <type>progress</type>
                  <id>118</id>
                  <posX>291</posX>
                  <posY>540</posY>
                  <width>126</width>
                  <height>20</height>            
                  <texturebg>osd_progress_background.png</texturebg>
                  <onlymidtexture>yes</onlymidtexture>
                  <midwidth>124</midwidth>
                  <midheight>16</midheight>
                  <midoffsetX>1</midoffsetX>
                  <midoffsetY>2</midoffsetY>
                  <midtexture>osd_progress_mid.png</midtexture>
                  <label>#Youtube.fm.Download.Progress</label>
                  <visible>string.equals(#Youtube.fm.IsDownloading, true)</visible>
                  <animation effect="fade" time="70" reversible="false">visible</animation>
                </control>         		
	</controls>
</window>